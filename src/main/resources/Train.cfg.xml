<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

 

<hibernate-mapping>
    <class name="com.course.dao.Train" table="trains">
        <id name="id" type="int" column="id">
            <generator class="assigned"></generator>
        </id>
        <property name="buildCountry" type="string" column="build_country" />
        <property name="ownerUsername" type="string" column="owner_username" />
        <property name="sigla" type="string" column="sigla" />
    </class>
</hibernate-mapping>